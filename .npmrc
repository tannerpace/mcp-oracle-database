# npm Registry Configuration
# This file configures npm to use the official registry
# and sets security-related defaults

# Use official npm registry
registry=https://registry.npmjs.org/

# Always require exact versions from lockfile
package-lock=true

# Save exact versions when installing (not ^ or ~)
save-exact=true

# Audit packages on install
audit=true

# Fail on audit findings at or above this level
audit-level=moderate

# Don't allow fallback to unsafe HTTP
strict-ssl=true

# Engine strict - fail if Node version doesn't match
engine-strict=true

# Fund messages - show funding info
fund=true
